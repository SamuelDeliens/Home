<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"

    tools:context=".ui.estimationPage.EstimationFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Estimation"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/colorPrimary" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/spinner"
        android:entries="@array/bien_spinner_array" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioButton">

        <RadioButton
            android:id="@+id/radio_maison"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maison"
            android:checked="true"
            android:textSize="20sp"
            android:gravity="center" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/radio_appartement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appartement"
            android:textSize="20sp"
            android:gravity="center" />

    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/editTextRooms"

        android:hint="Room number"
        android:inputType="number" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/editTextSurface"

        android:hint="Surface (mÂ²)"
        android:inputType="number" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:inputType="number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/editTextOther"

        android:hint="Other" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"

        android:id="@+id/estimation_button"
        android:text="Estimation"

        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/colorOnPrimary"
        android:background="@drawable/rounded"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/estimationResult"

        android:text="Resultat Estimation"
        android:textSize="20sp"/>

</LinearLayout>